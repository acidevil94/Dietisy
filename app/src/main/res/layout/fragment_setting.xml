<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.andrea.dietisy.fragment.SettingFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:elevation="1dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="415dp"

                android:elevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="@dimen/cardview_default_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="left"
                        android:layout_weight="0.1"
                        android:text="Profilo Utente"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:textStyle="bold|italic" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Nome"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="sans" />



                        <EditText
                            android:id="@+id/txtNomeSetting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:ems="10"
                            android:hint="Inserisci..."
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="#000000"

                            android:textColorHint="#000000" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Sesso"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rdbtnMaschioSetting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#000000"
                                android:text="Maschio"
                                android:textColor="#000000" />

                            <RadioButton
                                android:id="@+id/rdbtnFemminaSetting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#000000"
                                android:text="Femmina"
                                android:textColor="#000000" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Data Di Nascita"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.29"></LinearLayout>

                        <EditText
                            android:id="@+id/txtDataSetting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="0.32"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Seleziona..."
                            android:inputType="none"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Altezza (cm)"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.29"></LinearLayout>

                        <EditText
                            android:id="@+id/txtAltezzaSetting"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.32"
                            android:ems="10"
                            android:hint="Inserisci..."
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="Polso (cm):"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.29"></LinearLayout>


                        <EditText
                            android:id="@+id/txtPolsoSetting"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.32"
                            android:hint="Inserisci..."
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.48"
                            android:gravity="center"
                            android:text="Livello d'AttivitÃ "
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <Spinner
                            android:id="@+id/cmbLivelloAttivitaSetting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.52"
                            android:foregroundTint="#FFFFFF"
                            android:textAlignment="center"
                            android:textColor="#000" />

                    </LinearLayout>

                    <!--
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:weightSum="1"
                                android:layout_weight="0.10"
                                android:gravity="center_horizontal">

                                <Button
                                    android:text="Salva"
                                    android:layout_width="58dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/btnSave2"
                                    android:layout_weight="0.17" />
                            </LinearLayout>
                    -->

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:elevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="@dimen/cardview_default_radius">


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>


</FrameLayout>
